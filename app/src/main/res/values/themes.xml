<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Practica3" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#C8AA6E</item>
        <item name="colorPrimaryVariant">@color/fondo_gris_oscuro</item>
        <item name="colorOnPrimary">#C8AA6E</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/fondo_turquesa</item>
        <item name="colorSecondaryVariant">@color/fondo_gris_oscuro</item>
        <item name="colorOnSecondary">@color/fondo_blanco</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="FullscreenDialogTheme" parent="Theme.AppCompat.DayNight.DialogWhenLarge">
        <item name="android:statusBarColor">@color/fondo_blanco</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowAnimationStyle">@style/Theme.AppCompat.Dialog</item>


    </style>

    <style name="Theme.Practica3.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Practica3.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Practica3.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>